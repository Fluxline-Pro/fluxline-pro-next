{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": ["dev", "test", "prod"],
      "metadata": {
        "description": "The environment for this deployment"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "repositoryUrl": {
      "type": "string",
      "defaultValue": "https://github.com/Fluxline-Pro/fluxline-pro-next",
      "metadata": {
        "description": "GitHub repository URL"
      }
    },

    "branch": {
      "type": "string",
      "defaultValue": "[if(equals(parameters('environment'), 'prod'), 'main', if(equals(parameters('environment'), 'test'), 'test', 'develop'))]",
      "metadata": {
        "description": "GitHub branch to deploy from"
      }
    }
  },
  "variables": {
    "staticWebAppName": "[concat('az-fluxline-next-', parameters('environment'))]",
    "storageAccountName": "[concat('fluxline', parameters('environment'), 'stg')]",
    "keyVaultName": "[concat('kv-fluxline-', parameters('environment'))]",
    "storageSkuName": "[if(equals(parameters('environment'), 'prod'), 'Standard_ZRS', 'Standard_LRS')]",
    "staticWebAppSku": "[if(equals(parameters('environment'), 'prod'), 'Standard', 'Free')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('storageSkuName')]"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "allowBlobPublicAccess": false,
        "allowCrossTenantReplication": false,
        "allowSharedKeyAccess": true,
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            },
            "table": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "minimumTlsVersion": "TLS1_2",
        "networkAcls": {
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [],
        "enabledForDeployment": false,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": "[if(equals(parameters('environment'), 'prod'), true, false)]",
        "softDeleteRetentionInDays": "[if(equals(parameters('environment'), 'prod'), 90, 7)]",
        "enableRbacAuthorization": true,
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2023-01-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('staticWebAppSku')]",
        "tier": "[variables('staticWebAppSku')]"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "buildProperties": {
          "appLocation": "/",
          "apiLocation": "",
          "outputLocation": "out"
        },
        "stagingEnvironmentPolicy": "[if(equals(parameters('environment'), 'prod'), 'Disabled', 'Enabled')]",
        "allowConfigFileUpdates": true,
        "enterpriseGradeCdnStatus": "[if(equals(parameters('environment'), 'prod'), 'Enabled', 'Disabled')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-02-01",
      "name": "[concat(variables('keyVaultName'), '/AZURE-STORAGE-CONNECTION-STRING')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-02-01",
      "name": "[concat(variables('keyVaultName'), '/AZURE-STORAGE-ACCOUNT-NAME')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[variables('storageAccountName')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-02-01",
      "name": "[concat(variables('keyVaultName'), '/NEXT-PUBLIC-ENVIRONMENT')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
      ],
      "properties": {
        "value": "[parameters('environment')]"
      }
    }
  ],
  "outputs": {
    "staticWebAppName": {
      "type": "string",
      "value": "[variables('staticWebAppName')]"
    },
    "staticWebAppDefaultHostname": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName'))).defaultHostname]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[variables('keyVaultName')]"
    },
    "keyVaultUri": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))).vaultUri]"
    }
  }
}